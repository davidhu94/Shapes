<Window x:Class="BallarAvStal.NewGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallarAvStal"
        mc:Ignorable="d"
        Title="NewGame" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Name:" VerticalAlignment="Center"/>
                <TextBox Name="NameTextBox" Width="150"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10" HorizontalAlignment="Left">
                <TextBlock Text="Shape:" VerticalAlignment="Center"/>
                <ComboBox x:Name="SelectShape" Width="150">
                    <ComboBoxItem  Content="Ellipse"/>
                    <ComboBoxItem  Content="Rectangle"/>
                    <ComboBoxItem  Content="Polygon"/>
                </ComboBox>
            </StackPanel>

            <Button Name="playButton" Content="Play" Width="100" Height="30" Click="PlayButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
