<Window x:Class="BallarAvStal.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallarAvStal"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">

    <Grid>
        <StackPanel VerticalAlignment="center" HorizontalAlignment="Center">
            <Button Content="New Game" Height="30" Width="150" Click="NewGameButton_Click"/>
            <Button Content="Store" Height="30" Width="150" Margin="0 20 0 0"/>

        </StackPanel>
        <ListBox x:Name="HighScoreBoard" Margin="35,45,585,164"/>

    </Grid>
</Window>
