<Window x:Class="BallarAvStal.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallarAvStal"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800"
        
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="50"
            Background="#96ceb4"
            BorderBrush="#ffeead"
            BorderThickness="5">

        <!--Röd #ff6f69
        Beige #ffeead
        Grön #96ceb4
        Mörkare Beige #ffcc5c
        Ljusare grön #88d8b0-->
        <Grid>
            <StackPanel VerticalAlignment="center" HorizontalAlignment="Center">
                <Button x:Name="newGameButton" Background="#ffeead"  Content="New Game" Height="30" Width="150" Click="NewGameButton_Click"/>
                <Button Background="#ffeead" Content="Store" Height="30" Width="150" Margin="0 20 0 0"/>

            </StackPanel>
            <ListBox x:Name="HighScoreBoard" Background="#ffeead" Margin="35,45,585,164"/>

        </Grid>
    </Border>
</Window>