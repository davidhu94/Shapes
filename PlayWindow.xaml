<Window x:Class="BallarAvStalTest.PlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallarAvStalTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightGray">
        <StackPanel Margin="20">
            <TextBlock x:Name="enterNameTextBlock" Width="150" Text="ENTER YOUR NAME" TextAlignment="Center"/>
            <TextBox x:Name="enterNameTextBox" Width="150" Height="20" TextAlignment="Left"/>
            <TextBlock x:Name="selectShapeTextBlock" Text="SELECT SHAPE" TextAlignment="Center" Width="150" Margin="0,50,0,0"/>
            <ComboBox x:Name="selectShapeComboBox" Width="150" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" SelectionChanged="selectShapeComboBox_SelectionChanged">
                <ComboBoxItem Name="playerRectangle" Content="Rectangle"/>
                <ComboBoxItem Name="playerEllipse" Content="Ellipse"/>
                <ComboBoxItem Name="playerPolygon" Content="Polygon"/>
            </ComboBox>
            <Button x:Name="playButton" Content="Play" Width="100" Height="30" Margin="0,150,0,0" Click="playButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
