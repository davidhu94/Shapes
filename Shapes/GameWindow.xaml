<Window x:Class="Shapes.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shapes"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800" 
        
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown">

    <!--Röd #ff6f69
         Beige #ffeead
        Grön #96ceb4
        Mörkare Beige #ffcc5c
        Ljusare grön #88d8b0-->

    <Border CornerRadius="50"
        Background="#96ceb4"
        BorderBrush="#ffeead"
        BorderThickness="5">
        <Canvas Name="GameCanvas">
            <Label Foreground="#ffeead" x:Name="timeLbl" Content="0" FontSize="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" Canvas.Left="415" HorizontalAlignment="Center" Canvas.Top="10"/>
            <Label Foreground="#ffeead" x:Name="ScoreLbl" Content="Score:" FontSize="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" Canvas.Left="338" HorizontalAlignment="Left" Canvas.Top="10"/>
        </Canvas>
    </Border>
</Window>
